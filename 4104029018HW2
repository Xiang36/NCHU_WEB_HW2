<script>
function a(){
	var name = document.form1.username.value;
	var birthd = document.form1.birth.value;
	var sexd = document.form1.sex.value;
	var hobbyd = "";
	for(i=0;i<document.forms['form1']['f1'].length;i++){
		if(document.forms['form1']['f1'][i].checked){
			hobbyd += document.forms['form1']['f1'][i].value + ",";
			}
	}
    var noted = document.form1.note.value;
	/*document.write("名字：" + name + "</br>");
	document.write("生日：" + birthd + "</br>");
	document.write("性別：" + sexd + "</br>");
	document.write("興趣：" + hobbyd + "</br>");
	document.write("自傳：" + noted + "</br>");*/
	tname.innerHTML = name;
	tbirth.innerHTML = birthd;
	tsex.innerHTML = sexd;
	thobby.innerHTML = hobbyd;
	tnote.innerHTML = noted;
}
</script>
